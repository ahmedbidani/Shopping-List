<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.mayokun.shoppinglist.data.model.ShoppingItem" />
        <variable
            name="clickListener"
            type="com.mayokun.shoppinglist.ui.itemlist.ShoppingItemListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:elevation="1dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:onClick="@{() -> clickListener.onClick(item)}">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    tools:text="Yam"
                    app:setItemName="@{item}"/>

                <LinearLayout
                    android:id="@+id/firstLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_name"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/staticText1"
                        android:layout_width="wrap_content"
                        android:textStyle="italic"
                        android:text="@string/qtyText"
                        android:layout_marginRight="3dp"
                        android:layout_height="wrap_content"

                        />

                    <TextView
                        android:id="@+id/item_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item_name"
                        android:textStyle="italic"
                        tools:text="50"
                        android:padding="5dp"
                        android:layout_marginEnd="5dp"
                        app:setItemQuantity="@{item}"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/secondLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/firstLinear"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/staticText2"
                        android:text="@string/date_added"
                        android:layout_width="wrap_content"
                        android:textStyle="italic"
                        android:layout_marginEnd="3dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_date_added"
                        tools:text="26th November, 2019"
                        android:layout_marginEnd="5dp"
                        android:textStyle="italic"
                        android:padding="5dp"
                        app:setDateCreated="@{item}"/>
                </LinearLayout>


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_below="@id/secondLinear"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/editBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@android:drawable/ic_menu_edit"
                        android:focusable="true" />

                    <Button
                        android:id="@+id/deleteBtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@android:drawable/ic_delete"
                        android:focusable="true" />

                </TableRow>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>